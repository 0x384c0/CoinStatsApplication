<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CoinStatsApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryVariant">@color/orange_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="horizontalLinearLayout">@style/HorizontalLinearLayout</item>
        <item name="recyclerViewStyle">@style/RecyclerViewStyle</item>
    </style>

    <!--region LinearLayout-->
    <style name="HorizontalLinearLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@drawable/bg_divider_horizontal</item>
    </style>
    <!--    endregion-->

    <style name="RecyclerViewStyle">
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>
</resources>